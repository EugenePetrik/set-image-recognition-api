# PROD Environment Configuration Template
# Copy this file to terraform.tfvars and customize for your environment
# IMPORTANT: This file is for production - review all settings carefully!

environment  = "prod"
aws_region   = "us-east-1"
project_name = "image-recognition-api"

# S3 Configuration
s3_bucket_force_destroy = true

# Application Configuration
ecr_repository_url  = ""
container_image_tag = "latest"
desired_count       = 2
task_cpu            = 256
task_memory         = 512
certificate_arn     = ""
domain_name         = ""
